


# ---------------------------------------------------
# レクタングルクラス
# ---------------------------------------------------
class Rect
  
  
  # -----------------------------------------------
  # コンストラクタ
  # -----------------------------------------------
  constructor: (x, y, width, height)->
    
    @x      = x || 0
    @y      = y || 0
    @width  = width || 0
    @height = height || 0
  
  
  
  # -----------------------------------------------
  # 
  # -----------------------------------------------
  right: =>
    
    return @x + @width
  
  
  
  # -----------------------------------------------
  # 
  # -----------------------------------------------
  bottom: =>
    
    return @y + @height
  
  
  
  # -----------------------------------------------
  # 
  # -----------------------------------------------
  center: =>
    
    return {
      x:~~(@x + @width * 0.5)
      y:~~(@y + @height * 0.5)
    };
  
  
  
  # -----------------------------------------------
  # 座標がエリア内
  # -----------------------------------------------
  isContain: (x, y) =>
    
    if x >= @x && x <= @right() && y >= @y && y <= @bottom()
      return true
    else
      return false












module.exports = Rect