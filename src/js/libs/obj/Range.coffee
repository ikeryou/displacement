


# ---------------------------------------------------
# 範囲クラス
# ---------------------------------------------------
class Range


  # -----------------------------------------------
  # コンストラクタ
  # -----------------------------------------------
  constructor: (min, max) ->

    @min = min
    @max = max



  # -----------------------------------------------
  # 範囲内？
  # -----------------------------------------------
  isContain: (val) =>

    return (@min >= val && @max <= val)



  # -----------------------------------------------
  # 一括
  # -----------------------------------------------
  set: (min, max) =>

    @min = min
    @max = max
















module.exports = Range
